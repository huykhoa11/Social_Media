$("#favorite_link").text("<%= favorite_text %>");

$('#favorite_img').attr( "src" , "heartred.png" );

$('#favorite_img').on({
    'click': function(){
    	if("<%= favorite_text %>" == "UnFavorite"){
    		$('#favorite_img').attr("src","heart.png");
    	}
    	else {
    		$('#favorite_img').attr("src","heartred.png");
    	}
        
    }
});
